<%if @users.count < 1%>
  <h1>No User here, sign up now!</h1>
<%else%>
<h1>Users</h1>
<%if current_user%>
<h2>You are signed in as <%= current_user.name%></h2>
<%end%>

<table class='table table-hover'>
  <thead>
    <tr>
      <th scoh1e='col'>Name</th>
      <th scope='col'>Loginid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.login_id %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: {confirm: 'You sure?'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

<%end%>
